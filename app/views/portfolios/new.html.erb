<h1>Create a new Porfolio Item</h1>

<% # it must be connected with the controller, method new
#%>

<%= form_for(@portfolio_item) do |form| %>
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    
    <div class="field">
      <%= form.label :subtitle %>
      <%= form.text_field :subtitle %>
    </div>
  
    <div class="field">
      <%= form.label :body %>
      <%= form.text_area :body %>
    </div>

    <ul>
    <% # this will iterate as many fields for tech are available %>
      <%= form.fields_for :technologies do |technology_form| %>
        <li>
          <%= technology_form.label :name %>
          <%= technology_form.text_field :name %>
        </li>
      <% end %>
    </ul>
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
  